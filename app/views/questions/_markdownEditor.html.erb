  <!-- type: answer / comment -->
  <div class="row">
    <% if user_signed_in? %>
      <!-- <h4 class="turquesa">Enter your <%= type %></h4> -->
      <% if type != "edit" %>
        <% clase = "collapse" %>
        <div>
          <button id="create-answer" class="btn btn-primary <%= link  %>" type="button" data-toggle="collapse" data-target="#collapse<%= type %>" aria-expanded="false" aria-controls="collapse<%= type %>">
            Create <%= type_name %>
          </button>
        </div>
        <% else %>
          <% clase = "otra" %>
      <% end %>
      <div class="<%= clase %>" id="<%= clase  %><%= type %>">
        <div>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
          <li role="presentation" class="active">
            <a href="#editor<%= type %>" aria-controls="editor<%= type %>" role="tab" data-toggle="tab" id="a-editor">Editor</a>
          </li>
          <li role="presentation">
            <a href="#preview<%= type %>" aria-controls="preview<%= type %>" role="tab" data-toggle="tab" id="a-preview">Preview</a>
          </li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="editor<%= type %>">
            <div class="well">
              <%= form_for [type_obj, type_obj_new] do |f| %>
                <div>
                  <%= f.text_area(:description, cols: 60, rows: 3, id: "en-form")  %>
                </div> 
                <div>
                  <p>This text editor supports markdown</p>
                </div>
                <div><%= f.submit "Send  #{type_name} ", class: "btn btn-primary big-button" %></div>
              <% end %>
            </div> 
          </div>
          <div role="tabpanel" class="tab-pane" id="preview<%= type %>">
            <div class="well">
              <h3 id="title-preview" class="turquesa"></h3>
              <div id="text-preview">
              </div>
            </div>
          </div>
        </div>
        </div>
      </div>
    <% end %>
  </div>