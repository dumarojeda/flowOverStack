  <!-- type: answer / comment -->
  <div class="row">
    <% if user_signed_in? %>
      <!-- <h4 class="turquesa">Enter your <%= type %></h4> -->
      <div>
      <button id="create-answer" class="btn btn-primary <%= link  %>" type="button" data-toggle="collapse" data-target="#collapse<%= type %>" aria-expanded="false" aria-controls="collapse<%= type %>">
        Create <%= type_name %>
      </button>
      </div>
      <div class="collapse" id="collapse<%= type %>">
        <div class="well">
          <%= form_for [type_obj, type_obj_new] do |f| %>
            <div>
              <%= md_simple_editor :class => "big-button important!" do %>
                <%= f.text_area(:description, cols: 60, rows: 3)  %>
              <% end %>
            </div> 
            <div><%= f.submit "Send  #{type_name} ", class: "btn btn-primary big-button" %></div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>